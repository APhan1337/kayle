# Create a new route

# GET Request - /token/metadata/{tokenPublicKey}

import { Connection } from '@metaplex/js';
import { Metadata } from "@metaplex-foundation/mpl-token-metadata";
import { format } from 'morgan'

const connection = new Connection('devnet');
const tokenPublicKey = 'Gz3vYbpsB2agTsAwedtvtTkQ1CG9vsioqLW3r9ecNpvZ';

const run = async () => {
  try {
    const ownedMetadata = await Metadata.load(connection, tokenPublicKey);
    console.log(ownedMetadata);
  } catch {
    console.log('Failed to fetch metadata');
  }
};

run();

# Step 1:
- set up the route

# Step 2:
- Code the route so that there is a GET request (you should be able to extract that id somehow and use it within the code)

# Step 3:
- return the information in JSON format

# Step 4:
- Test it in Postman, save the request in postman